@page
@model WorkingWithRazorPage.Pages.EmployeesModel

<div class="row">

    <h1>Employees</h1>
    <table class="table">
        <thead>
           <tr>
               <th>Employee ID</th>
               <th>Last Name</th>
               <th>First Name</th>
               <th>Title</th>
               <th>Birth Date</th>
               <th>Hire Date</th>
               <th>Address</th>
               <th>City</th>
               <th>Region</th>
               <th>Postal Code</th>
               <th>Country</th>
               <th>Home Phone</th>
           </tr> 
           
        </thead>
        <tbody>
            @foreach (var item in Model.Employees)
            {
                <tr>
                    <td>@item.EmployeeID</td>
                    <td>@item.LastName</td>
                    <td>@item.FirstName</td>
                    <td>@item.Title</td>
                    <td>@item.BirthDate</td>
                    <th>@item.HireDate</th>
                    <td>@item.Address</td>
                    <td>@item.City</td>
                    <td>@item.Region</td>
                    <td>@item.PostalCode</td>
                    <td>@item.Country</td>
                    <td>@item.HomePhone</td>
                </tr>
            }
        </tbody>
    </table>

</div>